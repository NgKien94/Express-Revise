extends ../../layouts/default.pug 
include ../../mixins/filter.pug
include ../../mixins/search.pug
include ../../mixins/pagination.pug 

block main 
    h1 Product admin page
    .card.mb-3 
        .card-header Bộ lọc và tìm kiếm 
        .card-body
            .row
                .col-6
                    +filter(listFilter)
                .col-6
                    +search(keyword)
                   

    .card.mb-3 
        .card-header Danh sách sản phẩm 
        .card-body 
            table.table.table-bordered.table-striped.mt-4
                    thead
                        tr
                            th STT
                            th Hình ảnh
                            th Tiêu đề
                            th Giá
                            th Trạng thái
                            th Hành động
                    tbody
                        each item,index in products 
                            tr
                                td #{index + objectPagination.startIndex}
                                td
                                    img(src= item.thumbnail alt= item.title width="100" height="auto")
                                td #{item.title}
                                td #{item.price}$
                                td
                                    if (item.status =="active")
                                        span(
                                            class="badge bg-success"
                                            style="cursor:pointer;"
                                            ) Hoạt động
                                    else 
                                        span(
                                            class="badge bg-danger"
                                            style="cursor:pointer;"
                                            ) Dừng hoạt động

                                td
                                    a.btn.btn-warning.text-white(href="#") Sửa
                                    a.btn.btn-danger.text-white.ms-2(href="#") Xóa

    +pagination(objectPagination)

block footerLink
    
    script(src="/admin/js/script.js") 